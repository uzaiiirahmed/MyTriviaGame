<?xml version="1.0" encoding="UTF-8" ?>
<component name="TriviaItem" extends="Group" focusable="true">
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChange" />
    </interface>
    <script type="text/brightscript" uri="TriviaItem.brs" />
    <children>
        <Rectangle
            id="background"
            width="308"
            height="228"
            color="0x333333FF">
            <Rectangle
                id="border"
                width="300"
                height="170"
                translation="[4,4]"
                color="0x555555FF">
                <Poster
                    id="poster"
                    width="300"
                    height="170"
                />
            </Rectangle>
            <Label
                id="title"
                width="300"
                height="24"
                translation="[4, 178]"
                font="font:MediumBoldSystemFont"
                horizAlign="left"
            />
            <Label
                id="progress"
                width="300"
                height="24"
                translation="[4, 202]"
                font="font:SmallSystemFont"
                horizAlign="left"
                text="0/10 Complete"
            />
        </Rectangle>
    </children>
</component> 