<?xml version="1.0" encoding="UTF-8" ?>
<component name="TriviaItem" extends="Group" focusable="true">
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChange" />
    </interface>
    <script type="text/brightscript" uri="TriviaItem.brs" />
    <children>
        <Rectangle
            id="background"
            width="264"
            height="386"
            color="0x333333FF">
            <Rectangle
                id="border"
                width="264"
                height="264"
                translation="[0,0]"
                color="0x555555FF">
                <Poster
                    id="poster"
                    width="256"
                    height="256"
                    translation="[4,4]"
                />
            </Rectangle>
            <Label
                id="title"
                width="256"
                height="24"
                translation="[4, 268]"
                font="font:MediumBoldSystemFont"
                horizAlign="left"
            />
            <Label
                id="progress"
                width="256"
                height="24"
                translation="[4, 300]"
                font="font:SmallSystemFont"
                horizAlign="left"
                text="0/10 Complete"
            />
            <Label
                id="description"
                width="256"
                height="54"
                translation="[4, 332]"
                font="font:SmallSystemFont"
                horizAlign="left"
                wrap="true"
            />
        </Rectangle>
    </children>
</component> 