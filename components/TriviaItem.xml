<?xml version="1.0" encoding="UTF-8" ?>
<component name="TriviaItem" extends="Group" focusable="true">
    <interface>
        <field id="itemContent" type="node" onChange="onItemContentChange" />
    </interface>
    <script type="text/brightscript" uri="TriviaItem.brs" />
    <children>
        <Rectangle
            id="background"
            width="244"
            height="500"
            color="0x333333FF">
            <Rectangle
                id="border"
                width="244"
                height="244"
                translation="[0,0]"
                color="0x555555FF">
                <Poster
                    id="poster"
                    width="236"
                    height="236"
                    translation="[4,4]"
                />
                <Poster
                    id="lockIcon"
                    uri="pkg:/images/locked.png"
                    width="40"
                    height="40"
                    translation="[196,8]"
                    visible="false" />
            </Rectangle>
            <Label
                id="title"
                width="236"
                height="24"
                translation="[4, 268]"
                font="font:SmallSystemFont"
                horizAlign="left"
                wrap="true"
            />
            <Label
                id="progress"
                width="236"
                height="24"
                translation="[4, 316]"
                font="font:SmallSystemFont"
                horizAlign="left"
                text="0/10 Complete"
                color="0xFFD700FF"
                visible="false"
            />
            <Label
                id="description"
                width="236"
                height="180"
                translation="[4, 348]"
                font="font:SmallSystemFont"
                horizAlign="left"
                wrap="true"
                color="0xFFFFFFFF"
            />
        </Rectangle>
    </children>
</component> 