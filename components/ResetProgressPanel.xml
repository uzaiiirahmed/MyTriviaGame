<?xml version="1.0" encoding="UTF-8" ?>
<component name="ResetProgressPanel" extends="Group" focusable="true">
    <interface>
        <field id="onYes" type="bool" alwaysNotify="true" />
        <field id="onNo" type="bool" alwaysNotify="true" />
    </interface>
    <script type="text/brightscript" uri="ResetProgressPanel.brs" />
    <children>
        <Poster id="fullBg" uri="pkg:/images/subback.png" width="1280" height="720" translation="[0,0]" />
        <Poster id="bgImage" uri="pkg:/images/wrong_bg.png" width="600" height="300" translation="[340, 210]" />
