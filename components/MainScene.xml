<?xml version="1.0" encoding="UTF-8" ?>
<component name="MainScene" extends="Group" focusable="true">
    <interface>
        <field id="selectedTrivia" type="assocarray" alwaysNotify="true" />
    </interface>
    <script type="text/brightscript" uri="MainScene.brs" />

    <children>
        <Rectangle
            id="bgRect"
            width="1280"
            height="720"
            color="0x1D1D1DFF"
        />
        <Label
            id="titleLabel"
            text="Trivia Quest"
            translation="[0, 50]"
            width="1280"
            height="100"
            horizAlign="center"
            vertAlign="center"
            font="font:LargeBoldSystemFont"
            color="0xFFFFFFFF"
        />
        <MarkupList
            id="triviaList"
            translation="[80, 220]"
            itemComponentName="TriviaItem"
            itemSize="[328, 228]"
            itemSpacing="[20, 0]"
            numColumns="3"
            numRows="1"
            vertFocusAnimationStyle="fixedFocus"
            width="1200"
            height="230"
        />
        <Label
            id="descLabel"
            text=""
            translation="[0, 600]"
            width="1280"
            height="80"
            horizAlign="center"
            vertAlign="center"
            color="0xFFD700FF"
        />
    </children>
</component>
