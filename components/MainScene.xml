<?xml version="1.0" encoding="UTF-8" ?>
<component name="MainScene" extends="Group" focusable="true">
    <interface>
        <field id="selectedTrivia" type="assocarray" alwaysNotify="true" />
        <field id="triviaTypes" type="array" />
    </interface>
    <script type="text/brightscript" uri="MainScene.brs" />

    <children>
        <Rectangle
            id="bgRect"
            width="1280"
            height="720"
            color="0x1D1D1DFF"
        />
        <Poster
            id="titleImage"
            uri="pkg:/images/Title.png"
            width="200"
            height="100"
            translation="[540, 30]"
        />
        <MarkupList
            id="triviaList"
            translation="[82, 160]"
            itemComponentName="TriviaItem"
            itemSize="[244, 500]"
            itemSpacing="[40, 0]"
            numColumns="4"
            numRows="1"
        />
        <Label
            id="descLabel"
            text=""
            translation="[0, 600]"
            width="1280"
            height="80"
            horizAlign="center"
            vertAlign="center"
            color="0xFFD700FF"
        />
        <ResetProgressPanel id="resetProgressPanel" visible="false" />
    </children>
</component>
